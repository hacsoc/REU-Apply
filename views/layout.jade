doctype html
html
  head
    block head
    
    block title
      title REU Apply
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav(class="navbar navbar-default navbar-fixed-top")
      a.navbar-brand(href="") REU Apply
      div.container
        div.navbar-header
        block top_navbar
          div(class="collapse navbar-collapse")
            ul(class="nav navbar-nav")
              li
                a(href="/home" id="dashboard") Dashboard
              li
                a(href="/profile" id="profile") Profile
            ul(class="nav navbar-nav navbar-right")
              li
                a(href="/logout") Logout
    div.container
      div(class="row main")
        if side_menu
          nav(class="sb-nav navbar navbar-light")
            span.sb-header
              = side_menu.title
            ul(class="nav navbar-nav")
              each item in side_menu.items
                li
                  a(href=item.href)= item.text
          div.content
            block content
        else
          div.content-wide
            block content

    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
    script(src="/javascripts/bootstrap.min.js")
    script.
      var highlighted = $("##{tb_highlighted}");
      highlighted.attr("class", "tb-highlighted");
      
    block script